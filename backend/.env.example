# ==============================
# Django settings
# ==============================
DEBUG=True                       # True cho dev, False khi production
SECRET_KEY=your_secret_key_here  # Thay bằng key thực tế trong .env
ALLOWED_HOSTS=*                  # Host nào được phép truy cập

# ==============================
# Database (PostgreSQL)
# ==============================
POSTGRES_DB=visasaigon_db        # Tên database
POSTGRES_USER=visasaigon_user    # User PostgreSQL
POSTGRES_PASSWORD=CHANGEME_DB_PASSWORD  # Password (thay trong .env)
POSTGRES_HOST=db                 # Tên service db trong docker-compose
POSTGRES_PORT=5432               # Port DB bên trong container

# ==============================
# Django DATABASE_URL (dùng dj-database-url)
# ==============================
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
